@using Common.Models;
@{
    ViewBag.Title = "Home Page";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Valuta</th>
            <th scope="col">Cena</th>
            <th scope="col">Alarm</th>
            <th scope="col">Količina</th>
            <th scope="col">Vrednost</th>
            <th scope="col">Uloženo/Isplaćeno</th>
            <th scope="col">Profit</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CryptoPortfolioItemDto item in ViewBag.Portfolio.Items)
        { 
            <tr>
                <td>@item.Currency</td>
                <td>@item.Price</td>
                <td>
                    <form method="post"  action="/Home/AddAlarm">
                        <div style="display:flex">
                            <input type="number" step="0.01" name="limit" />
                            <input type="hidden" name="currency" value="@item.Currency" />
                            <input type="submit" class="btn"  value="Napravi alarm"/>
                         </div>
                    </form>
                </td>
                <td>@item.Quantity</td>
                <td>@item.Value</td>
                <td>@item.Invested</td>
                <td>@item.Profit</td>
            </tr> 
        }
    </tbody>
</table>

<h5>Uloženo: @ViewBag.Portfolio.Invested USD  </h5>
<h5>Ukupna vrednost: @ViewBag.Portfolio.TotalValue USD</h5>
<h5>Profit: @(ViewBag.Portfolio.Profit) USD</h5>